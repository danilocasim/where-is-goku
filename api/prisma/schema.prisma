generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String // MediumText may be needed for MySql
  expiresAt DateTime
}

model Character {
  id   Int    @id @default(autoincrement())
  name String @unique

  coordinates Coordinates?
}

model Coordinates {
  id           Int       @id @default(autoincrement())
  character    Character @relation(fields: [characterId], references: [id])
  characterId  Int       @unique
  top_axis_y   Float
  bot_axis_y   Float
  left_axis_x  Float
  right_axis_x Float
}

model Leaderboard {
  id            Int    @id @default(autoincrement())
  name          String
  timeDisplay   String
  finishedBySec Int
}
